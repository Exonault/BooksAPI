@page "/login"

<PageTitle>Login</PageTitle>
<h3>Login</h3>

<div class="d-flex justify-content-center align-items-center" id="register-container">
    <div class="mb-3">
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="mb-3">
        <div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <label asp-for="Password" class="form-label">Password</label>
        <div class="input-group">
            <input asp-for="Password" class="form-control password">
            <div class="d-flex justify-content-end">
                <button class="bi-eye-fill position-absolute btn btn-link text-dark shadow-none password-icon" tabindex="-1" type="button"></button>
            </div>
        </div>
    </div>
    <div class="mb-4">
        <div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
        <div class="input-group">
            <input asp-for="ConfirmPassword" class="form-control password">
            <div class="d-flex justify-content-end">
                <button class="bi-eye-fill position-absolute btn btn-link text-dark shadow-none password-icon" tabindex="-1" type="button"></button>
            </div>
        </div>
    </div>
</div>
<button type="submit" class="btn btn-primary">Register</button>

